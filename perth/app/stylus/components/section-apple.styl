@lost flexbox flex

.apple
  height 650px
  overflow hidden
  position relative
  .container
    lost-center 940px 15px
    height 650px
    .apple-wrap
      position absolute
      left -8%
      bottom -85px
    header
      margin-left auto
      width 45%
      margin-top 105px
      font-family ProximaNova Regular
      h1
        font-family inherit
        font-size 40px
        color #545454
        margin 0
        margin-top 40px
      .text
        margin 0
        margin-top 35px
        color #7e7e7e
        font-weight bold
      .coments
        margin 0
        margin-top 30px
        font-family inherit
      .btn
        background-color transparent
        border 3px solid #ea4c89
        text-transform uppercase
        color #ea4c89
        font-family ProximaNova Regular
        font-size 15px
        margin-top 60px
        padding-top 22px
        padding-bottom 22px
        padding-left 27px
        padding-right 27px
        cursor pointer
        border-radius 2px
        i
          padding-left 15px
