.owl-theme .owl-dots .owl-dot.active span, .owl-theme .owl-dots .owl-dot:hover span
  background #008ed6

.owl-theme
  .owl-dots
    .owl-dot
      span
        background #94cae6

.section-cleints
  padding-top 110px
  background-color #fff
  header
    text-align center
    h1
      display inline
      font-family inherit
      font-size 35px
      color #323232
    p
      padding-top 30px
      font-size 17px
      font-family inherit
      color #727272
      -webkit-margin-before 0
      -webkit-margin-after 0
  .company
    padding-top 80px
    display flex
    flex-flow row wrap
    max-width 1170px
    margin-left auto
    margin-right auto
    padding-left 15px
    padding-right 15px
    justify-content center
    img
      &:not(:first-child)
        padding-left 45px
  .wrapper-clients
    display flex
    flex-flow row wrap
    max-width 1170px
    margin-left auto
    margin-right auto
    padding-left 15px
    padding-right 15px
    padding-top 80px
    .coments-block
      flex-direction column
      text-align center
      display flex
      flex 0 0 auto
      width calc(99.99%*1/3 - (30px - 30px*1/3))
      &:nth-child(n)
        margin-right 30px
      &:last-child
        margin-right 0
      .coments
        position relative
        background-color #f7f8fa
        box-shadow -3px 3px 5px 0 #e5e5e5
        &:before
          position relative
          content ''
        &:after
          width 30px
          height 30px
          background-color inherit
          position absolute
          content ''
          bottom -15px
          box-shadow -3px 3px 5px 0 #e5e5e5
          transform rotate(-45deg)
          left calc(50% - 15px)
        .icon
          background-color #008ed6
          position absolute
          top -16px
          left calc(50% - 16px)
          width 32px
          height 32px
          outline 4px solid #e5e5e5
          border 3px solid #fff
          border-radius 5px
          i
            font-size 31px
            color #fff
        .text-coments
          padding-top 53px
          padding-left 35px
          padding-right 35px
          padding-bottom 33px
      h3
        padding-top 35px
        display inline
        -webkit-margin-before 0
        -webkit-margin-after 0
        font-family inherit
        font-size 16px
        color #008ed6
      p
        padding-top 6px
        font-family inherit
        font-size 16px
        color #727272
        -webkit-margin-before 0
        -webkit-margin-after 0

