border-box-html()
@lost flexbox flex
@font-face
  font-family MyriadProRegular
  src url(../fonts/MyriadProRegular.woff2) format(woff2)

@font-face
  font-family RalewayBold
  src url(../fonts/RalewayBold.woff2) format(woff2)

@font-face
  font-family RalewayMedium
  src url(../fonts/RalewayMedium.woff2) format(woff2)

@font-face
  font-family RalewaySemiBold
  src url(../fonts/RalewaySemiBold.woff2) format(woff2)

@font-face
  font-family SourceSansProBold
  src url(../fonts/SourceSansProBold.woff2) format(woff2)

@font-face
  font-family SourceSansProIt
  src url(../fonts/SourceSansProIt.woff2) format(woff2)

@font-face
  font-family SourceSansProRegular
  src url(../fonts/SourceSansProRegular.woff2) format(woff2)

@font-face
  font-family WalckwayBlack
  src url(../fonts/WalckwayBlack.woff2) format(woff2)

:root
  --bg-color red

@media (width >= 500px) and (width <= 1200px)
  header
    color var(--bg-color)
@custom-media --only-medium-screen (width >= 500px) and (width <= 1200px)

@media (--only-medium-screen)
  header
    color var(--bg-color)

body
  font-family RalewayBold, RalewayMedium, RalewaySemiBold, SourceSansProBold, SourceSansProIt, SourceSansProRegular, WalckwayBlack, MyriadProRegular, sans-serif
  background-color #fff

.header
  color var(--bg-color)
  &--img
    background-image url(../images/header.png)
    background-repeat round
    min-height 100vh
  &-nav
    align-items center
    lost-center 1170px 15px
    max-height 75px
    padding-top 51px
    &-first
      justify-content space-between
    &--logo
      cursor pointer
      display block
      background url(../images/logo-first.png) no-repeat
      width 104px
      height 26px
    &--socials
      a
        text-decoration none
        color #000
        &:visited
          color inherit
        i
          display inline-flex
          align-items center
          justify-content center
          border-radius 50%
          width 25px
          height 25px
          background-color #fff
          &:not(:first-child)
            margin-left 6px
    &-second
      justify-content space-between
      &-list
        lost-column 1/5 0 0
        &--items
          list-style-type none
  &-content
    margin-top 165px
    text-align center
    color #fff
    h1
      font-size 45px
      b
        color #008ed6
        font-weight 400
    p
      margin 0 auto
      max-width 850px
      padding-top 45px
      font-size 20px
  &-form-wrapper
    background-color rgba(0, 0, 0, .5)
    border-radius 2px
    margin-top 160px
    lost-center 945px 23px
    padding-top 25px
    padding-bottom 25px
    form
      display flex
      justify-content space-between
      width 100%
      input
        display flex
        padding-left 20px
        padding-right 0
        padding-top 0
        padding-bottom 0
        color #727272
        font-family Raleway, sans-serif
        font-size 16px
        min-height 50px
        min-width 217px
        border-radius 2px
        border 1px solid #008ed6
        border-left 4px solid #008ed6
        background-color #000
        box-sizing border-box
        transition all .7s linear
        &:not(:first-child)
          margin-left 23px
      .btn
        button-disabled()
        display flex
        justify-content center
        padding 0
        margin-left 23px
        border-radius 2px
        text-transform uppercase
        border none
        cursor pointer
        font-family Raleway, sans-serif
        font-size 16px
        background-color #008ed6
        color #fff
        min-height 54px
        min-width 184px

.first-section
  padding-bottom 100px
  background-color #fff
  .wrapper-browsers
    display flex
    flex-flow row wrap
    max-width 1170px
    margin-left auto
    margin-right auto
    padding-left 15px
    padding-right 15px
    margin-top 100px
    .browser
      visibility hidden
      flex 0 0 auto
      width calc(99.99%*1/2 - (30px - 30px*1/2))
      background-repeat no-repeat
      height 424px
      width 532px
      &:nth-child(n)
        margin-right 30px
      &:last-child
        margin-right 0
      &:nth-child(0n)
        margin-right 0
    .text
      flex 0 0 auto
      width calc(99.99%*1/2 - (30px - 30px*1/2))
      &:nth-child(n)
        margin-right 30px
      &:last-child
        margin-right 0
      &:nth-child(0n)
        margin-right 0
      h1
        display inline
        font-family Raleway, sans-serif
        font-size 35px
        color #323232
      p
        color #727272
        margin-top 55px
        font-size 16px
      .block
        &:not(last-child)
          margin-bottom 52px
        p
          -webkit-margin-before 0
          -webkit-margin-after 0
          padding-left 52px
        .icon-text
          display flex
          position relative
          i
            display inline-flex
            justify-content center
            align-items center
            background-color #008ed6
            color #fff
            border-radius 2px
            width 33px
            height 33px
          h2
            -webkit-margin-before 0
            -webkit-margin-after 0
            position absolute
            top -5px
            left 51px

