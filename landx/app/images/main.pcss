.third-section
  padding-top 76px
  background-color #fff
  .wrapper-features
    display flex
    flex-flow row wrap
    max-width 1170px
    margin-left auto
    margin-right auto
    padding-left 15px
    padding-right 15px
    header
      text-align center
      padding-bottom 75px
      width 100%
      h1
        font-family Raleway, sans-serif
        font-size 35px
        font-weight 700
        color #000
        -webkit-margin-start 0
        -webkit-margin-end 0
      p
        display inline
        padding-top 43px
        padding-bottom 43px
        font-size 17px
        color #727272
        font-family Raleway, sans-serif
    .content
      display flex
      flex-flow row wrap
      .blocks
        visibility hidden
        box-shadow 0 0 3px 3px #e5e5e5
        padding-bottom 50px
        margin-bottom 30px
        text-align center
        flex 0 0 auto
        width calc(99.99%*3/6 - (30px - 30px*3/6))
        flex 1 1 360px
        &:nth-child(n)
          margin-right 30px
        &:last-child
          margin-right 0
        &:nth-child(3n)
          margin-right 0
        &:hover
          box-shadow 0 0 5px 5px #e5e5e5
        h1
          font-family Raleway, sans-serif
          font-size 20px
          color #323232
          padding-bottom 17px
          -webkit-margin-before 0
          -webkit-margin-after 0
        p
          padding-left 10px
          padding-right 10px
          font-family Raleway, sans-serif
          color #727272
          font-size 16px
          -webkit-margin-before 0
          -webkit-margin-after 0
        i
          color #008ed6
          font-size 50px
          padding-bottom 28px
          padding-top 20px

.four-section
  background-color #f7f8fa
  padding-top 113px
  padding-bottom 100px
  header
    text-align center
    h1
      display inline
      color #323232
      font-size 35px
      font-family Raleway, sans-serif
    p
      font-family inherit
      font-size 17px
      color #727272
      padding-top 36px
      -webkit-margin-before 0
      -webkit-margin-after 0
  .wrapper-pricing
    display flex
    flex-flow row wrap
    max-width 1170px
    margin-left auto
    margin-right auto
    padding-left 15px
    padding-right 15px
    .block-price
      visibility hidden
      border-radius 3px
      box-shadow 0 0 3px 3px #e5e5e5
      border #e5e5e5 1px solid
      margin-top 81px
      flex 0 0 auto
      width calc(99.99%*3/3 - (30px - 30px*3/3))
      max-width 368px
      min-width 280px
      &:nth-child(n)
        margin-right 30px
      &:last-child
        margin-right 0
      .head
        padding-top 24px
        padding-bottom 24px
        text-align center
        background-color #323232
        h3
          font-family inherit
          font-size 24px
          color #fff
          display inline
        p
          color #fff
          font-family inherit
          font-size 16px
          padding-top 17px
          -webkit-margin-before 0
          -webkit-margin-after 0
      .head--active
        background-color #008ed6
      .list-block
        display flex
        flex-direction column
        .item
          padding-left 30px
          padding-right 30px
          display flex
          justify-content space-between
          &:not(:last-child)
            border-bottom dotted 2px #e3e3e3
          i
            display inline-flex
            align-items center
        .sign
          padding-left 30px
          padding-right 30px
          display flex
          justify-content space-between
          p
            display flex
            align-items center
          .btn
            padding 15px
            margin-top 16px
            margin-bottom 16px
            display inline-flex
            cursor pointer
            background-color inherit
            border 1px solid #727272
            border-radius 2px
            text-transform uppercase
            color #727272
            font-size 16px
            font-family inherit
          .btn--active
            border none
            background-color #008ed6
            color #fff

